{
  "apiVersion": 2,
  "name": "admiral/wp-card",
  "title": "WP Card Block",
  "category": "widgets",
  "icon": "index-card",
  "description": "A simple custom card block without ACF.",
  "editorScript": "admiral-wp-card-editor",
  "render": "file:./render.php",
  "supports": {
    "align": true,
    "anchor": true
  },
  "attributes": {
    "image": {
      "type": "string",
      "default": ""
    },
    "title": {
      "type": "string",
      "default": "This is a demo card"
    },
    "desc": {
      "type": "string",
      "default": "Lorem ipsum dolor sit amet..."
    }
  }
}
